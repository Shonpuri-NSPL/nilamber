<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="rfq_line_zero_price_confirm_wizard_form_view" model="ir.ui.view">
            <field name="name">rfq.line.zero.price.confirm.wizard.form</field>
            <field name="model">rfq.line.zero.price.confirm.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="alert alert-warning" role="alert">
                            <h4 class="alert-heading">⚠️ Zero Price Warning</h4>
                            <field name="message" readonly="1" nolabel="1"/>
                        </div>
                    </sheet>
                    <footer>
                        <button name="action_confirm_zero_price" 
                                type="object" 
                                class="btn-primary"
                                string="Confirm Anyway"/>
                        <button name="action_cancel_line" 
                                type="object" 
                                class="btn-danger"
                                string="Remove Product"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>