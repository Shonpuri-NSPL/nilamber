<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <record id="reject_reason_wizard_form_view" model="ir.ui.view">
            <field name="name">reject.reason.wizard.form.view</field>
            <field name="model">reject.reason.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="requisition_id" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="reason" placeholder="Please provide reason for rejection..." 
                                       required="1" style="min-height: 100px;"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_confirm_reject" type="object" string="Confirm Rejection" 
                                class="btn-danger"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>