<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Approval Wizard Form View -->
        <record id="view_approval_wizard_form" model="ir.ui.view">
            <field name="name">material.consumption.approval.wizard.form</field>
            <field name="model">material.consumption.approval.wizard</field>
            <field name="arch" type="xml">
                <form string="Approval Action">
                    <sheet>
                        <group>
                            <group>
                                <field name="request_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="action"/>
                            </group>
                        </group>
                        <field name="comments" placeholder="Enter your comments here..."/>
                    </sheet>
                    <footer>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action for Approval Wizard -->
        <record id="action_approval_wizard" model="ir.actions.act_window">
            <field name="name">Approval Action</field>
            <field name="res_model">material.consumption.approval.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
