<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="stock_scrap_inherit_add_project_field" model="ir.ui.view">
        <field name="name">stock.scrap.form.inherit.add.project.field</field>
        <field name="model">stock.scrap</field>
        <field name="inherit_id" ref="stock.stock_scrap_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='scrap_reason_tag_ids']" position="before">
                <field name="project_id" readonly="state == 'done'"/>
            </xpath>
        </field>
    </record>

    <record id="stock_scrap_tree_view_inherit" model="ir.ui.view">
        <field name="name">stock.scrap.list.inherit</field>
        <field name="model">stock.scrap</field>
        <field name="inherit_id" ref="stock.stock_scrap_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="project_id" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record id="stock_scrap_search_view_inherit_project" model="ir.ui.view">
        <field name="name">stock.scrap.search.inherit.project</field>
        <field name="model">stock.scrap</field>
        <field name="inherit_id" ref="stock.stock_scrap_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='product']" position="after">
                <filter string="Project" name="project" domain="[]" context="{'group_by':'project_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>