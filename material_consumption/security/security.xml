<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Material Issue Category -->
        <record id="category_material_issue" model="ir.module.category">
            <field name="name">Material Issue</field>
            <field name="description">Category for Material Request groups</field>
            <field name="sequence">1</field>
        </record>

        <record model="res.groups.privilege" id="res_groups_privilege_material">
            <field name="name">Material</field>
            <field name="category_id" ref="category_material_issue"/>
            <field name="sequence">7</field>
        </record>



        <!-- Material Request User Group -->
        <record id="group_material_issue_user" model="res.groups">
            <field name="name">Material Request Issuer</field>
            <field name="comment">Can Issue material requests</field>
        </record>

        <!-- Material Request User Group -->
        <record id="group_material_user" model="res.groups">
            <field name="name">Material Request User</field>
            <field name="comment">Can create and submit material requests</field>
        </record>

        <!-- Material Request Approver Group -->
        <record id="group_material_approver" model="res.groups">
            <field name="name">Material Request Approver</field>
            <field name="comment">Can approve or reject material requests</field>
        </record>

        <!-- Material Request Manager Group -->
        <record id="group_material_manager" model="res.groups">
            <field name="name">Material Request Manager</field>
            <field name="comment">Can manage all material requests and configurations</field>
        </record>

        <!-- Approval Levels -->

        <!-- Approval Level 1 Group -->
        <record id="group_approval_level_1" model="res.groups">
            <field name="name">Approval Level 1</field>
            <field name="comment">Can approve material requests at level 1</field>
            <field name="implied_ids" eval="[(4, ref('group_material_approver'))]"/>
        </record>

        <!-- Approval Level 2 Group -->
        <record id="group_approval_level_2" model="res.groups">
            <field name="name">Approval Level 2</field>
            <field name="comment">Can approve material requests at level 2</field>
            <field name="implied_ids" eval="[(4, ref('group_approval_level_1'))]"/>
        </record>

        <!-- Approval Level 3 Group -->
        <record id="group_approval_level_3" model="res.groups">
            <field name="name">Approval Level 3</field>
            <field name="comment">Can approve material requests at level 3</field>
            <field name="implied_ids" eval="[(4, ref('group_approval_level_2'))]"/>
        </record>

        <!-- Approval Level 4 Group -->
        <record id="group_approval_level_4" model="res.groups">
            <field name="name">Approval Level 4</field>
            <field name="comment">Can approve material requests at level 4</field>
            <field name="implied_ids" eval="[(4, ref('group_approval_level_3'))]"/>
        </record>

    </data>
</odoo>
