<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="view_project_sequence_form_inherit" model="ir.ui.view">
			<field name="name">view.project.sequence.form.inherit</field>
			<field name="model">project.project</field>
			<field name="inherit_id" ref="project.edit_project"/>
			<field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button class="oe_stat_button"
                            type="object"
                            name="action_view_rate_analysis"
                            icon="fa-file-text-o">
                        <field string="Rate Analysis" name="rate_analysis_count" widget="statinfo"/>
                    </button>
                </xpath>
                <xpath expr="//div[hasclass('oe_title')]/h1" position="before">
                    <span class="o_form_label">
                        <field name="sequence_code" readonly="1"/>
                    </span>
                </xpath>
                <xpath expr="//field[@name='date']" position="after">
                    <field name="is_create_budget"/>
                    <field name="budget_amount" invisible="not is_create_budget" required="is_create_budget != False"/>
                    <field name="word_of_budget_amount" invisible="not is_create_budget" required="is_create_budget != False"/>
                    <field name="budget_type" invisible="1"/>
                    <field name="budget_analytic_id" context="{'trigger_onchange': 1}" options="{'no_create': True}"
                        invisible="not is_create_budget" readonly="1"/>
                </xpath>
			</field>
		</record>

        <record id="project_task_view_tree_main_inherit" model="ir.ui.view">
            <field name="name">project.task.view.list.main.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.project_task_view_tree_main_base"/>
            <field name="arch" type="xml">
                <field name="user_ids" position="before">
                    <field name="budget_amount" sum="Total sum of budget Amount"  optional="show"/>
                </field>
            </field>
        </record>
	</data>
</odoo>