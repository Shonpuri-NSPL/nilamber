<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_rate_analysis_list" model="ir.ui.view">
        <field name="name">rate.analysis.list</field>
        <field name="model">rate.analysis</field>
        <field name="arch" type="xml">
            <list>
                <field name="analysis_code"/>
                <field name="material_name"/>
                <field name="project_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_rate_analysis_form" model="ir.ui.view">
        <field name="name">rate.analysis.form</field>
        <field name="model">rate.analysis</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="analysis_code"/>
                            <field name="material_name"/>
                            <field name="project_id"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Rate Breakup">
                            <field name="rate_analysis_line_ids">
                                <list editable="bottom">
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="rate"/>
                                    <field name="unit"/>
                                    <field name="amount" sum="total amount"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_rate_analysis" model="ir.actions.act_window">
        <field name="name">Rate Analysis</field>
        <field name="res_model">rate.analysis</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Rate Analysis
            </p>
            <p>
                Analyze material rates with detailed breakup of costs and percentages.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_rate_analysis"
              parent="project.menu_project_report"
              action="action_rate_analysis"
              name="Analysis of Rates"
              sequence="100"/>

</odoo>