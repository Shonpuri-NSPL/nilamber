<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_create_units_wizard_form" model="ir.ui.view">
        <field name="name">create.units.wizard.form</field>
        <field name="model">create.units.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Units with Activities">
                <group>
                    <group>
                        <field name="floor_id" options="{'no_create': True}"/>
                        <field name="project_id" readonly="1"/>
                        <field name="tower_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="unit_count"/>
                        <field name="unit_prefix"/>
                        <field name="starting_number"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="unit_type"/>
                        <field name="carpet_area"/>
                    </group>
                    <group>
                        <field name="planned_start_date"/>
                        <field name="planned_end_date"/>
                    </group>
                </group>
                <group>
                    <field name="create_activities"/>
                    <field name="activity_template_ids" widget="many2many_tags" 
                           invisible="not create_activities"
                           placeholder="Leave empty to create all active templates"/>
                </group>
                <footer>
                    <button name="action_create_units" string="Create Units" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_create_units_wizard" model="ir.actions.act_window">
        <field name="name">Create Units</field>
        <field name="res_model">create.units.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
