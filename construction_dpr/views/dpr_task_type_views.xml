<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Task Type List View -->
    <record id="view_dpr_task_type_list" model="ir.ui.view">
        <field name="name">dpr.task.type.list</field>
        <field name="model">dpr.task.type</field>
        <field name="arch" type="xml">
            <list editable="top">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Task Type Form View -->
    <record id="view_dpr_task_type_form" model="ir.ui.view">
        <field name="name">dpr.task.type.form</field>
        <field name="model">dpr.task.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="code" required="1"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Task Type Search View -->
    <record id="view_dpr_task_type_search" model="ir.ui.view">
        <field name="name">dpr.task.type.search</field>
        <field name="model">dpr.task.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Task Type Action -->
    <record id="action_dpr_task_type" model="ir.actions.act_window">
        <field name="name">Task Types</field>
        <field name="res_model">dpr.task.type</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'default_active': True}</field>
    </record>


</odoo>
