<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- DPR Configuration Action -->
        <record id="action_dpr_config" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="res_model">dpr.config</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Summary Report Action (moved up for reference) -->
        <record id="action_dpr_summary" model="ir.actions.act_window">
            <field name="name">Summary Report</field>
            <field name="res_model">dpr.report</field>
            <field name="view_mode">pivot,graph,tree</field>
        </record>

        <!-- Report Wizard Action (moved up for reference) -->
        <record id="action_dpr_report_wizard" model="ir.actions.act_window">
            <field name="name">Generate Reports</field>
            <field name="res_model">dpr.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


    </data>
</odoo>