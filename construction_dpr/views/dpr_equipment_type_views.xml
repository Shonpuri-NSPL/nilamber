<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Equipment Type List View -->
    <record id="view_dpr_equipment_type_list" model="ir.ui.view">
        <field name="name">dpr.equipment.type.list</field>
        <field name="model">dpr.equipment.type</field>
        <field name="arch" type="xml">
            <list editable="top">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Equipment Type Form View -->
    <record id="view_dpr_equipment_type_form" model="ir.ui.view">
        <field name="name">dpr.equipment.type.form</field>
        <field name="model">dpr.equipment.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Equipment Type Search View -->
    <record id="view_dpr_equipment_type_search" model="ir.ui.view">
        <field name="name">dpr.equipment.type.search</field>
        <field name="model">dpr.equipment.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Equipment Type Action -->
    <record id="action_dpr_equipment_type" model="ir.actions.act_window">
        <field name="name">Equipment Types</field>
        <field name="res_model">dpr.equipment.type</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'default_active': True}</field>
    </record>

</odoo>
